<%- include("../partials/header") %>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Edit Comment</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/feature/forum/show/<%=forumId%>/comment/<%=comment._id%>/edit?_method=PUT" method="POST">
                    <div class="form-group">
                        <textarea class="form-control"  name="comment[title]" rows="10" cols="15"><%=comment.title%></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/feature/forum/show/forumId">Go Back</a>
            </div>
        </div>
    </div>
